[core]
	autocrlf = false
	pager = cat
	excludesfile = ~/.gitignore
[alias]
	addremove = add -A .
	ar = add -A .
	st = status
	co = checkout
	b = branch
	dif = diff
	com = commit
	coma = commit -a --amend --no-edit
	unstage = reset HEAD
	tree = log --graph --decorate --pretty=oneline --abbrev-commit
[push]
	default = simple
[color]
	ui = true
[gui]
	fontui = -family \"Lucida Grande\" -size 11 -weight normal -slant roman -underline 0 -overstrike 0
	fontdiff = -family Menlo -size 11 -weight normal -slant roman -underline 0 -overstrike 0
